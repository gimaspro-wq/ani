# App Configuration
APP_NAME=Anirohi API
VERSION=1.0.0
DEBUG=true
ENV=dev

# Database
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://ani_user:ani_password@postgres:5432/ani_db

# Security (CRITICAL: CHANGE THESE IN PRODUCTION!)
# Generate SECRET_KEY with: openssl rand -hex 32
# Must be at least 32 characters in production
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
# Generate INTERNAL_TOKEN with: openssl rand -hex 32
# Used for internal API (parser access) - must be at least 32 characters in production
INTERNAL_TOKEN=dev-internal-token-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
JWT_ACCESS_TTL_MINUTES=15
REFRESH_TTL_DAYS=30
# Set to true in production with HTTPS
COOKIE_SECURE=false

# CORS
# Comma-separated list of allowed origins (no wildcards in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis
# Format: redis://host:port/db or redis://:password@host:port/db
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
OTEL_SERVICE_NAME=anirohi-api
# Leave empty if not using OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=

